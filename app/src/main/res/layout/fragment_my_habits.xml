<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.MyHabitsFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="15dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="15dp" />

    <ImageView
        android:id="@+id/back"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/header"
        app:layout_constraintStart_toStartOf="@id/start"
        app:layout_constraintTop_toTopOf="@+id/header"
        app:shapeAppearance="@style/Habit"
        app:srcCompat="@drawable/arrow_icon" />

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="My Habits"
        android:textSize="25sp"
        android:theme="@style/MaterialAlertDialog.Material3.Title.Text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/search_card"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintStart_toStartOf="@id/start"
        app:layout_constraintEnd_toEndOf="@id/end"
        android:layout_marginTop="30dp"
        app:strokeWidth="0dp"
        app:cardElevation="5dp"

        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardPreventCornerOverlap="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/search_icon"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_marginStart="8dp"
                android:textSize="15sp"
                android:fontFamily="@font/regular"
                android:background="@android:color/transparent"
                android:hint="Search"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:columnCount="3"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@id/search_card">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="7dp"
            android:clickable="false"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:strokeWidth="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/new_habit_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:layout_gravity="bottom"
                android:paddingTop="20dp"
                android:paddingHorizontal="10dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/new_habit_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create New Habit"
                    android:fontFamily="@font/regular"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/text_color"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="7dp"
            android:layout_columnWeight="1"

            android:layout_rowWeight="1"
            app:strokeWidth="0dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/group_habits_cont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:layout_gravity="bottom"
                android:paddingTop="20dp"
                android:paddingHorizontal="10dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:tint="@color/orange"
                    android:src="@drawable/group_habit_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group Habits"
                    android:fontFamily="@font/regular"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/text_color"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="7dp"
            android:layout_columnWeight="1"

            android:layout_rowWeight="1"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            app:strokeWidth="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/completed_habits"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:layout_gravity="bottom"
                android:paddingTop="20dp"
                android:paddingHorizontal="15dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/completed_habits_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed Habits"
                    android:fontFamily="@font/regular"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/text_color"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="7dp"
            android:layout_columnWeight="1"

            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            app:strokeWidth="0dp"
            android:layout_rowWeight="1"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/habits"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:layout_gravity="bottom"
                android:paddingTop="20dp"
                android:paddingHorizontal="10dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:tint="@color/orange"
                    android:src="@drawable/habits_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Habits"
                    android:fontFamily="@font/regular"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/text_color"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="7dp"
            android:layout_columnWeight="1"

            android:layout_rowWeight="1"
            app:strokeWidth="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:layout_gravity="bottom"
                android:paddingTop="20dp"
                android:paddingHorizontal="10dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/challenges_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Challenges &amp; Leaderboard"
                    android:fontFamily="@font/regular"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/text_color"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


    </GridLayout>
        

</androidx.constraintlayout.widget.ConstraintLayout>