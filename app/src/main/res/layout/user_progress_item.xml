<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/divider_start"
        android:layout_width="1.5dp"
        android:layout_height="30dp"
        android:background="@color/lavender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:paddingHorizontal="7dp"
        android:text="Alexander"
        android:gravity="center"
        android:fontFamily="@font/regular"
        android:textColor="@color/user_tab_text_color"
        app:layout_constraintBottom_toBottomOf="@+id/divider_start"
        app:layout_constraintEnd_toEndOf="@id/progress"
        app:layout_constraintStart_toEndOf="@id/divider_start"
        app:layout_constraintTop_toTopOf="@+id/divider_start" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:indeterminateTint="@color/black"
        android:progress="0"
        android:layout_marginTop="40dp"
        app:indicatorColor="@color/medium_orange"
        app:indicatorDirectionCircular="clockwise"
        app:indicatorSize="85dp"
        app:layout_constraintStart_toEndOf="@+id/divider_start"
        app:layout_constraintTop_toBottomOf="@+id/divider_start"
        app:trackColor="@color/orange_op_20"
        app:trackCornerRadius="10dp"
        app:trackThickness="6dp" />

    <TextView
        android:id="@+id/progress_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textColor="@color/orange"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/progress"
        app:layout_constraintEnd_toEndOf="@+id/progress"
        app:layout_constraintStart_toStartOf="@+id/progress"
        app:layout_constraintTop_toTopOf="@+id/progress" />


</androidx.constraintlayout.widget.ConstraintLayout>