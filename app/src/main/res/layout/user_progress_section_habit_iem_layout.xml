<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/habit_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingEnd="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/mulish"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Today's Progress Enjoy OutDoors"
        android:textColor="@color/light_grey"
        app:layout_constraintEnd_toStartOf="@+id/is_habit_completed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/is_habit_completed"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/is_habit_completed_progress_section_bg"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="@+id/habit_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/habit_name" />



</androidx.constraintlayout.widget.ConstraintLayout>